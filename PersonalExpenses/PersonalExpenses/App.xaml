<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="PersonalExpenses.App">
	<Application.Resources>
		
			<ResourceDictionary>
			<Color x:Key="mainColor">#48BEFF</Color>
			<Color x:Key="darkColor">#000000</Color>
				
				<Style TargetType="Label" x:Key="subtitleLabel">
					<Setter Property="TextColor" Value="{StaticResource mainColor}"/>
					<Setter Property="FontAttributes" Value="Bold"/>
				</Style>

			<Style TargetType="Label" x:Key="mainvalueLabel" BasedOn="{StaticResource subtitleLabel}">
				<Setter Property="FontSize" Value="20"/>
				<Setter Property="TextColor" Value="{StaticResource darkColor}" />
			</Style>
			</ResourceDictionary>
		
	</Application.Resources>
</Application>